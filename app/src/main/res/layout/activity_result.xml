<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="charlesjamnajim.micropol.ResultActivity">


        <TextView
            android:id="@+id/txtResultQuestion"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:text="Poll Question"
            android:textAlignment="center"
            android:textSize="36sp"
            tools:layout_editor_absoluteX="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtResult1"
            android:layout_height="48dp"
            android:background="@color/colorPrimaryDark"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/buttonTextColor"
            android:textSize="36sp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/txtResultQuestion"
            android:layout_width="130dp" />

        <TextView
            android:id="@+id/txtResult2"
            android:layout_height="48dp"
            android:background="@color/colorPrimaryDark"
            android:text="TEXT"
            android:textAlignment="center"
            android:textColor="@color/buttonTextColor"
            android:textSize="36sp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_width="130dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtResult1" />

        <TextView
            android:id="@+id/txtResult3"
            android:layout_height="48dp"
            android:background="@color/colorPrimaryDark"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/buttonTextColor"
            android:textSize="36sp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtResult2"
            android:layout_width="130dp" />

        <TextView
            android:id="@+id/txtResult4"
            android:layout_height="48dp"
            android:background="@color/colorPrimaryDark"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/buttonTextColor"
            android:textSize="36sp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtResult3"
            android:layout_width="130dp" />

        <TextView
            android:id="@+id/txtChoice4"
            android:background="@color/colorAccentLight"
            android:elevation="1dp"
            android:maxHeight="@dimen/activity_horizontal_margin"
            android:text=""
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/buttonTextColor"
            android:textSize="14sp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtChoice3"
            android:layout_width="200dp"
            android:layout_height="48dp" />

        <TextView
            android:id="@+id/txtChoice1"
            android:background="@color/colorAccentLight"
            android:elevation="1dp"
            android:maxHeight="@dimen/activity_horizontal_margin"
            android:text="TEXT"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/buttonTextColor"
            android:textSize="14sp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_height="48dp"
            android:layout_width="200dp"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/txtResultQuestion" />

        <TextView
            android:id="@+id/txtChoice3"
            android:background="@color/colorAccentLight"
            android:elevation="1dp"
            android:maxHeight="40dp"
            android:minHeight="40dp"
            android:text=""
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/buttonTextColor"
            android:textSize="14sp"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtChoice2"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/txtChoice2"
            android:layout_width="200dp"
            android:background="@color/colorAccentLight"
            android:elevation="1dp"
            android:maxHeight="40dp"
            android:text="TEXT"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/buttonTextColor"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/txtChoice1"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp" />

        <Button
            android:text="Return to Home"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            style="@style/Widget.AppCompat.Button.Colored"
            android:backgroundTint="@color/colorAccentLight"
            android:onClick="goHome"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/txtExpirationDate"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:text="Expiration Date is: "
            android:textAlignment="center"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="8dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/txtChoice4" />


</android.support.constraint.ConstraintLayout>
